<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dip"
    android:background="@drawable/c_list_selector"
    android:padding="10dip" >

    <TextView
        android:id="@+id/location_search_result_item_layout_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/map_marker"
        android:gravity="top|center_horizontal"
        android:text="A"
        android:textColor="#424242" />

    <ImageView
        android:id="@+id/location_search_result_item_layout_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/icon_arrow" />

    <TextView
        android:id="@+id/location_search_result_item_layout_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/location_search_result_item_layout_detail"
        android:text="TextView"
        android:textColor="#82270c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/location_search_result_item_layout_distance"
        android:layout_toRightOf="@id/location_search_result_item_layout_marker"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@+id/location_search_result_item_layout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/location_search_result_item_layout_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>