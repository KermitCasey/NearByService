<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/location_search_result_layout_panel_top"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@drawable/title_background" >

        <Button
            android:id="@+id/location_search_result_layout_back"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/title_button_selector"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/location_search_result_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ＸＸＸ列表"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/location_search_result_layout_btn_turn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/location_search_result_layout_btn_previous_page"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:background="@drawable/transparent"
                android:gravity="center"
                android:text="上页"
                android:textColor="@color/title_button_selector"
                android:textSize="13sp" />

            <Button
                android:id="@+id/location_search_result_layout_btn_next_page"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:background="@drawable/transparent"
                android:gravity="center"
                android:text="下页"
                android:textColor="@color/title_button_selector"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/location_search_result_layout_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line_horizontal"
        android:listSelector="@drawable/transparent"
        android:scrollbarStyle="outsideOverlay" />

</LinearLayout>